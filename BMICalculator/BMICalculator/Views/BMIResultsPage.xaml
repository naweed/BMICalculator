<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:localConverters="clr-namespace:BMICalculator.Converters"
             mc:Ignorable="d"
             x:Class="BMICalculator.Views.BMIResultsPage">

    <ContentPage.Resources>
        <localConverters:BMIOpacityConverter x:Key="cvtUnderWeightBMIOpacity" FromValue="0" ToValue="18.9"/>
        <localConverters:BMIOpacityConverter x:Key="cvtNormalBMIOpacity" FromValue="19" ToValue="24.9"/>
        <localConverters:BMIOpacityConverter x:Key="cvtOverWeightBMIOpacity" FromValue="25" ToValue="29.9"/>
        <localConverters:BMIOpacityConverter x:Key="cvtObeseBMIOpacity" FromValue="30" ToValue="39.9"/>
        <localConverters:BMIOpacityConverter x:Key="cvtSeverlyObeseBMIOpacity" FromValue="40" ToValue="54"/>
    </ContentPage.Resources>


    <StackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Spacing="32"
        IsVisible="{Binding IsDataReady, Mode=OneWay}">

        <!-- Header/Title -->
        <Label
            Text="{Binding Title, Mode=OneWay}"
            Style="{StaticResource SectionHeaderStyle}" 
            HorizontalOptions="Center" />

        <!-- BMI Result -->
        <Label
            Text="{Binding ComputedBMI, StringFormat='{0:0.0}', Mode=OneWay}"
            Style="{StaticResource BMIResultStyle}" 
            HorizontalOptions="Center" />


        <!-- BMI Scale -->
        <Grid
            ColumnDefinitions="*,*,*,*,*"
            RowDefinitions="80, 44, 14"
            ColumnSpacing="12"       
            Margin="24,0">

            <!-- Underweight -->
            <Image
                Source="{Binding AvatarImage, Mode=OneWay}"
                Grid.Column="0"
                Grid.Row="0"
                Aspect="Fill"
                WidthRequest="16"
                HorizontalOptions="Center"
                VerticalOptions="Fill"
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtUnderWeightBMIOpacity}}" />

            <Label
                Grid.Column="0"
                Grid.Row="1"
                Text="Under&#x0a;Weight"
                Style="{StaticResource ScaleHeaderStyle}" 
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtUnderWeightBMIOpacity}}" />

            <Label
                Grid.Column="0"
                Grid.Row="2"
                Text="&lt; 19"
                Style="{StaticResource ScaleDisplayStyle}" 
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtUnderWeightBMIOpacity}}" />


            <!-- Normal -->
            <Image
                Source="{Binding AvatarImage, Mode=OneWay}"
                Grid.Column="1"
                Grid.Row="0"
                Aspect="Fill"
                WidthRequest="20"
                HorizontalOptions="Center"
                VerticalOptions="Fill" 
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtNormalBMIOpacity}}" />

            <Label
                Grid.Column="1"
                Grid.Row="1"
                Text="Normal"
                Style="{StaticResource ScaleHeaderStyle}"
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtNormalBMIOpacity}}"/>

            <Label
                Grid.Column="1"
                Grid.Row="2"
                Text="19 to 24"
                Style="{StaticResource ScaleDisplayStyle}"
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtNormalBMIOpacity}}"/>


            <!-- Overweight -->
            <Image
                Source="{Binding AvatarImage, Mode=OneWay}"
                Grid.Column="2"
                Grid.Row="0"
                Aspect="Fill"
                WidthRequest="24"
                HorizontalOptions="Center"
                VerticalOptions="Fill" 
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtOverWeightBMIOpacity}}"/>

            <Label
                Grid.Column="2"
                Grid.Row="1"
                Text="Over&#x0a;Weight"
                Style="{StaticResource ScaleHeaderStyle}"
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtOverWeightBMIOpacity}}"/>

            <Label
                Grid.Column="2"
                Grid.Row="2"
                Text="25 to 29"
                Style="{StaticResource ScaleDisplayStyle}"
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtOverWeightBMIOpacity}}"/>

            <!-- Obese -->
            <Image
                Source="{Binding AvatarImage, Mode=OneWay}"
                Grid.Column="3"
                Grid.Row="0"
                Aspect="Fill"
                WidthRequest="29"
                HorizontalOptions="Center"
                VerticalOptions="Fill" 
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtObeseBMIOpacity}}"/>

            <Label
                Grid.Column="3"
                Grid.Row="1"
                Text="Obese"
                Style="{StaticResource ScaleHeaderStyle}"
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtObeseBMIOpacity}}"/>

            <Label
                Grid.Column="3"
                Grid.Row="2"
                Text="30 to 39"
                Style="{StaticResource ScaleDisplayStyle}" 
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtObeseBMIOpacity}}"/>

            <!-- Severly Obese -->
            <Image
                Source="{Binding AvatarImage, Mode=OneWay}"
                Grid.Column="4"
                Grid.Row="0"
                Aspect="Fill"
                WidthRequest="35"
                HorizontalOptions="Center"
                VerticalOptions="Fill"
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtSeverlyObeseBMIOpacity}}"/>

            <Label
                Grid.Column="4"
                Grid.Row="1"
                Text="Severly&#x0a;Obese"
                Style="{StaticResource ScaleHeaderStyle}"
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtSeverlyObeseBMIOpacity}}"/>

            <Label
                Grid.Column="4"
                Grid.Row="2"
                Text="&gt; 40"
                Style="{StaticResource ScaleDisplayStyle}"
                Opacity="{Binding ComputedBMI, Converter={StaticResource cvtSeverlyObeseBMIOpacity}}"/>

        </Grid>

    </StackLayout>
    
</ContentPage>